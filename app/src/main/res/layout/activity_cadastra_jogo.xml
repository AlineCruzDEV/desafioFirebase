<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kratos"
    tools:context=".jogo.ui.CadastraJogoActivity">

    <LinearLayout
        android:id="@+id/llCadastraJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <include
            android:id="@+id/cvCadastraJogo"
            layout="@layout/item_cadastra_jogo"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCarregaFoto"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_camera_branca"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>